<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 文字，但是是可以点击的   点击后的背景效果 -->
    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#9DD7A3"
                    android:startColor="#9DD7A3" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#00000000"
                    android:startColor="#00000000" />
            </shape>
        </item>
    </selector>

</inset>