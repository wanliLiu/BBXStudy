<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgound"
    android:orientation="vertical">

    <com.hyx.android.Game351.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hyx.android.Game351.view.HeadView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:background="@color/color_line1" />

    <RadioGroup
        android:id="@+id/categoryCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioRecently"
            style="@style/main_tab_category"
            android:layout_weight="1"
            android:checked="true"
            android:text="最近更新" />

        <View
            android:layout_width="0.8dip"
            android:layout_height="match_parent"
            android:background="@color/color_line1" />

        <RadioButton
            android:id="@+id/radioHot"
            style="@style/main_tab_category"
            android:layout_weight="1"
            android:text="热门精华" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>